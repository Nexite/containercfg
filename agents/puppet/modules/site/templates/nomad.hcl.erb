datacenter = "srnd"
data_dir = "/opt/nomad"

vault {
  enabled = true
  address = "http://vault.srnd.cloud:8200"
}

client = {
  enabled = true
  options = {
    "docker.auth.config" = "/root/.docker/config.json"
    "docker.auth.helper" = "gcr"
  }
  host_volume "acme" {
    path     = "/acme"
    read_only = false
  }
  <% @host_volumes.each do |tag, mountpoint| %>
    host_volume "<%= tag %>" {
      path = "/data-disks/<%= tag %>"
      read_only = false
    }
  <% end %>
}
